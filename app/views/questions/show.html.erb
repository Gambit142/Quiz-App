<%= render @question %>

<%= form_with model: @answer, url: quiz_question_answers_url(@question.quiz.id, @question.id), method: :post do |form| %>

  <div>
    <%= form.label :response, style: "display: block" %>
    <%= form.text_field :response %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>


<div>
  <%= link_to "Edit this question", edit_quiz_question_path(@question.quiz.id, @question.id) %>
  <%= link_to "Back to question", quiz_path(@question.quiz.id) %>
  <%= link_to "Answer", new_quiz_question_answer_path(@question.quiz.id, @question.id) %>

  <%= button_to "Destroy this question", quiz_question_path(@question.quiz.id, @question.id), method: :delete %>
</div>
